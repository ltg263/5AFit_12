            <solid android:color="#50eeeeee" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- 中心背景 -->
    <item>
        <shape
            android:shape="rectangle"
            android:useLevel="false">
            <corners android:radius="10dp" />
            <gradient
                android:angle="180"
                android:endColor="#FABB27"
                android:startColor="#FEF6E4"
                android:type="linear" />
        </shape>
    </item>
</layer-list>


