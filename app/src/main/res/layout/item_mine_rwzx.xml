<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:src="@drawable/icon_rwzx_4" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv"
            android:text="完成在线运动"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv1"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:layout_toEndOf="@id/iv"
            android:text="0/0"
            android:textColor="@color/color_999999"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_shape_theme_25_fffaee"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dimen_3dp">

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+0积分"
                android:textColor="#FFB300"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/common_margin_16"
                android:layout_height="@dimen/common_margin_16"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:background="@drawable/btn_shape_bj_theme_25"
                android:scaleType="center"
                android:src="@drawable/icon_rwzx" />
        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:background="@color/line_color" />
</LinearLayout>
