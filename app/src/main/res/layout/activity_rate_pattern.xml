<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_mine_top">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_task_sele_top"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv"
            android:layout_alignBottom="@id/tv"
            android:layout_marginStart="@dimen/dimen_25dp"
            android:background="@drawable/bj_shape_line_f2_5"
            android:paddingHorizontal="@dimen/dimen_5dp"
            android:src="@drawable/icon_jiantou_zuo_ff" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/iv"
            android:layout_alignBottom="@id/iv"
            android:adjustViewBounds="true"
            android:background="@drawable/btn_shape_bj_fff" />


        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/dimen_15dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dimen_20dp"
            android:textStyle="bold" />


    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_75dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:text="心率模式"
                android:textColor="@color/color_ffffff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:layout_marginTop="@dimen/dp_10"
                android:text="Heart rate pattern"
                android:textColor="@color/color_ffffff"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginHorizontal="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dimen_25dp"
                android:background="@drawable/ic_shade_img">

                <ImageView
                    android:id="@+id/ll_xl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_100dp"
                    android:layout_alignEnd="@id/ll_top"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/dimen_80dp"
                    android:layout_marginTop="-10dp"
                    android:layout_marginEnd="-10dp"
                    android:background="@mipmap/ic_bnt_bj"/>

                <ImageView
                    android:id="@+id/ll_zh"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_100dp"
                    android:layout_alignEnd="@id/ll_top"
                    android:layout_marginStart="-10dp"
                    android:layout_marginTop="-10dp"
                    android:layout_marginEnd="80dp"
                    android:background="@mipmap/ic_bnt_bj_y"
                    android:visibility="invisible" />

                <LinearLayout
                    android:id="@+id/ll_qd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-10dp"
                    android:visibility="invisible"
                    android:layout_marginTop="-10dp"
                    android:layout_marginEnd="-10dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen_100dp"
                        android:layout_weight="1"
                        android:background="@mipmap/ic_bnt_bj_y" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:textColor="@color/color_text_theme"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen_100dp"
                        android:layout_weight="1"
                        android:background="@mipmap/ic_bnt_bj" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_top"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50dp">

                    <TextView
                        android:id="@+id/tv_top_xl"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="心率"
                        android:textColor="@color/color_text_theme"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_top_qd"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="强度"
                        android:textColor="@color/color_666666"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_top_zh"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="综合"
                        android:textColor="@color/color_666666"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/ll_top" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:text="心率运动"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dimen_2dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="-5dp"
                android:background="@drawable/line_shape_bj_select" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dimen_25dp"
                android:background="@drawable/ic_shade_img"
                android:padding="@dimen/dimen_15dp">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:text="目标区间:"
                    android:textColor="@color/color_text_theme"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_toEndOf="@id/tv1"
                    android:text="70%~80% (100bpm~110bpm)"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14" />


                <RelativeLayout
                    android:id="@+id/view"
                    android:layout_width="@dimen/dimen_120dp"
                    android:layout_height="@dimen/dimen_120dp"
                    android:layout_below="@id/tv1"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/dimen_15dp">

                    <com.jxkj.fit_5a.conpoment.view.StepArcView
                        android:id="@+id/sv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:id="@+id/tv_bfb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="82%"
                        android:textColor="@color/color_333333"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_bfb"
                        android:layout_centerHorizontal="true"
                        android:text="即时区间"
                        android:textColor="@color/color_999999"
                        android:textSize="10sp"
                        android:textStyle="bold" />


                    <ImageView
                        android:layout_width="@dimen/dimen_50dp"
                        android:layout_height="@dimen/dimen_20dp"
                        android:layout_below="@id/tv2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dimen_2dp"
                        android:background="@drawable/btn_shape_bj_theme_25"
                        android:src="@drawable/icon_jsqj_bf" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/tv_3"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="00:00"
                    android:textColor="@color/color_333333"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/view"
                    android:layout_marginStart="@dimen/dimen_25dp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:drawableStart="@drawable/ic_xlms_sj"
                    android:drawablePadding="@dimen/dimen_5dp"
                    android:text="时间"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/tv_4"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="2.4km"
                    android:textColor="@color/color_333333"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/view"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dimen_25dp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:drawableStart="@drawable/ic_xlms_lc"
                    android:drawablePadding="@dimen/dimen_5dp"
                    android:text="里程"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dimen_50dp"
                android:overScrollMode="never" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</RelativeLayout>