<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar_common" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5dp"
        android:background="@color/line_color" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_20dp">

            <ImageView
                android:id="@+id/iv_bgImg"
                android:layout_width="@dimen/dimen_80dp"
                android:layout_height="@dimen/dimen_80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="@drawable/line_stroke_f"
                android:padding="@dimen/dimen_2dp"
                android:scaleType="center"
                android:src="@drawable/icon_add_theme" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:text="设置话题封面"
                android:textColor="@color/color_999999"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/ic_taiyang_bj" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_40"
                    android:drawableStart="@drawable/icon_circle_1"
                    android:drawablePadding="@dimen/dimen_5dp"
                    android:text="圈子名字"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv1"
                    android:layout_alignBottom="@id/tv1"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_toEndOf="@id/tv1"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textColor="#F35983"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/et1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv1"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:background="@null"
                    android:hint="给圈子取个好名字"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_15dp" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/et1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/line_color" />


                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view"
                    android:layout_marginTop="@dimen/dp_40"
                    android:drawableStart="@drawable/icon_circle_1"
                    android:drawablePadding="@dimen/dimen_5dp"
                    android:text="圈子介绍"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv2"
                    android:layout_alignBottom="@id/tv2"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_toEndOf="@id/tv2"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textColor="#F35983"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/et2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv2"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:background="@null"
                    android:hint="圈子介绍"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_15dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/et2"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/line_color" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40">

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/icon_circle_3"
                    android:drawablePadding="@dimen/dimen_5dp"
                    android:text="设备类型"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv3"
                    android:layout_alignBottom="@id/tv3"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_toEndOf="@id/tv3"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textColor="#F35983"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_60dp"
                    android:layout_below="@id/tv3"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/ic_shade_img"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_sb_type"
                        android:layout_width="@dimen/dimen_100dp"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/icon_jiantou_xia_66"
                        android:gravity="center"
                        android:padding="@dimen/dp_10"
                        android:text="无器械"
                        android:textColor="@color/color_000000"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_10"
                        android:background="@color/line_color" />

                    <TextView
                        android:id="@+id/tv_sb_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/icon_jiantou_xia_66"
                        android:gravity="center"
                        android:padding="@dimen/dp_10"
                        android:text="选择设备类型"
                        android:textColor="@color/color_999999"
                        android:textSize="14sp" />
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40">

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/icon_circle_2"
                    android:drawablePadding="@dimen/dimen_5dp"
                    android:text="运动任务"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv4"
                    android:layout_alignBottom="@id/tv4"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_toEndOf="@id/tv4"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textColor="#F35983"
                    android:textSize="13sp" />

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_60dp"
                    android:layout_below="@id/tv4"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/ic_shade_img"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="@dimen/dimen_100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/dp_10"
                        android:text="目标"
                        android:textColor="@color/color_000000"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_10"
                        android:background="@color/line_color" />

                    <TextView
                        android:id="@+id/tv_mblx"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/icon_jiantou_xia_66"
                        android:gravity="center"
                        android:padding="@dimen/dp_10"
                        android:text="选择目标类型"
                        android:textColor="@color/color_999999"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_60dp"
                    android:layout_below="@id/ll"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:background="@drawable/ic_shade_img"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="@dimen/dimen_100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/dp_10"
                        android:text="周期"
                        android:textColor="@color/color_000000"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_10"
                        android:background="@color/line_color" />

                    <TextView
                        android:id="@+id/tv_zqsc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/icon_jiantou_xia_66"
                        android:gravity="center"
                        android:padding="@dimen/dp_10"
                        android:text="选择周期时长"
                        android:textColor="@color/color_999999"
                        android:textSize="14sp" />
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40">

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/icon_circle_4"
                    android:drawablePadding="@dimen/dimen_5dp"
                    android:text="奖励积分"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv5"
                    android:layout_alignBottom="@id/tv5"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_toEndOf="@id/tv5"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textColor="#F35983"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv5"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/ic_shade_img"
                    android:gravity="center_vertical">

                    <RelativeLayout
                        android:layout_width="@dimen/dimen_100dp"
                        android:layout_height="@dimen/dimen_100dp"
                        android:layout_margin="@dimen/dimen_15dp"
                        android:background="@mipmap/ic_taiyang_bj"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_v"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="200"
                            android:textColor="@color/color_text_theme"
                            android:textSize="32sp"
                            android:textStyle="bold" />


                        <View
                            android:id="@+id/view1"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="1dp"
                            android:layout_below="@id/tv_v"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="@dimen/dimen_5dp"
                            android:background="@color/color_text_theme" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/view1"
                            android:layout_centerInParent="true"
                            android:text="奖励积分"
                            android:textColor="@color/color_text_theme"
                            android:textSize="@dimen/dp_10" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_20dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="奖励积分设定："
                            android:textColor="@color/color_text_theme"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:lineSpacingExtra="@dimen/dp_10"
                            android:text="@string/jianli_shuoming"
                            android:textColor="@color/color_999999"
                            android:textSize="11sp" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_go_find"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:layout_marginTop="@dimen/dimen_60dp"
                android:layout_marginBottom="@dimen/dimen_30dp"
                android:background="@drawable/btn_shape_bj_theme_25"
                android:gravity="center"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:text="立即创建"
                android:textColor="@color/color_ffffff"
                android:textSize="16sp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>