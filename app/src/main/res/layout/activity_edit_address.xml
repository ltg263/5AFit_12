<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar_common" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5dp"
        android:background="@color/line_color" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_15dp">

                <TextView
                    android:layout_width="@dimen/dimen_100dp"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="收货人姓名"
                    android:textColor="@color/color_000000" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入收货人"
                    android:maxLines="8"
                    android:paddingLeft="@dimen/dimen_30dp"
                    android:textSize="@dimen/dimen_14dp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_15dp">

                <TextView
                    android:layout_width="@dimen/dimen_100dp"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="收货人手机号"
                    android:textColor="@color/color_000000" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入手机号码"
                    android:maxLength="11"
                    android:paddingLeft="@dimen/dimen_30dp"
                    android:textSize="@dimen/dimen_14dp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_15dp">

                <TextView
                    android:layout_width="@dimen/dimen_100dp"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="所在地区"
                    android:textColor="@color/color_000000" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:drawableRight="@drawable/icon_jiantou_you_99"
                    android:gravity="center_vertical"
                    android:hint="请选择"
                    android:paddingLeft="@dimen/dimen_30dp"
                    android:textSize="@dimen/dimen_14dp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_15dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="@dimen/dimen_100dp"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="开通位置"
                    android:textColor="@color/color_000000" />

                <TextView
                    android:id="@+id/tv_address_ktwz"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择开通位置"
                    android:paddingLeft="@dimen/dimen_30dp"
                    android:textSize="@dimen/dimen_14dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5dp"
                android:background="@color/line_color"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_15dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="@dimen/dimen_100dp"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="具体地址"
                    android:textColor="@color/color_000000" />

                <TextView
                    android:id="@+id/tv_address_dw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="定位地址"
                    android:paddingLeft="@dimen/dimen_30dp"
                    android:textSize="@dimen/dimen_14dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_100dp"
                android:gravity="top"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_15dp">

                <TextView
                    android:layout_width="@dimen/dimen_100dp"
                    android:layout_height="wrap_content"
                    android:text="具体地址"
                    android:textColor="@color/color_000000" />

                <EditText
                    android:id="@+id/et_detailaddress"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="楼牌号"
                    android:minLines="3"
                    android:paddingLeft="@dimen/dimen_30dp"
                    android:textSize="@dimen/dimen_14dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="设为默认地址"
                    android:textColor="@color/color_000000" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_szmr"
                    android:layout_width="@dimen/common_margin_20"
                    android:layout_height="@dimen/common_margin_20"
                    android:src="@drawable/wxz" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color" />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_50dp"
        android:layout_marginHorizontal="@dimen/dimen_30dp"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:background="@drawable/btn_shape_bj_theme_25"
        android:gravity="center"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="确  定"
        android:textColor="@color/color_ffffff"
        android:textSize="16sp" />


</LinearLayout>