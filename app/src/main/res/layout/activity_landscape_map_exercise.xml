<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<!--    ic_liezi  ic_mpg_image-->
    <com.jxkj.fit_5a.conpoment.view.RobotView
        android:id="@+id/iv_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_mpg_image" />

    <ImageView
        android:id="@+id/iv_dian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_d_red"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_24dp"
        android:background="@drawable/bj_circle_fff_50"
        android:paddingHorizontal="@dimen/dimen_24dp"
        android:paddingVertical="@dimen/dp_10"
        android:text="00:00:00"
        android:textColor="@color/color_333333"
        android:textSize="17sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dimen_120dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:background="@drawable/bj_circle_fff_4">

        <TextView
            android:id="@+id/tv_quan"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_margin="6dp"
            android:background="@drawable/bj_circle_dot_999"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/color_ffffff"
            android:textSize="8sp" />

        <com.jxkj.fit_5a.conpoment.view.RobotView
            android:id="@+id/rvLX"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_margin="@dimen/common_margin_6" />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/rvLX"
            android:layout_alignBottom="@id/rvLX"
            android:drawableStart="@mipmap/ic_hp_yd_13"
            android:text="0km"
            android:textColor="@color/color_000000"
            android:textSize="8sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:background="@drawable/bj_circle_ccc_6"
        android:drawableStart="@mipmap/ic_hp_yd_14"
        android:drawablePadding="13dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/dimen_20dp"
        android:paddingVertical="@dimen/dimen_5dp"
        android:text="返回VGu起哦v哥Wiu曲棍球诶怕高V九曲湾"
        android:textColor="@color/color_ffffff"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:background="@drawable/bj_circle_fff_6_zx">

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="center"
            android:src="@mipmap/ic_hp_yd_12" />

        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="center"
            android:src="@mipmap/ic_hp_yd_9"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="center"
            android:src="@mipmap/ic_hp_yd_8" />

        <ImageView
            android:id="@+id/iv_4"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="center"
            android:src="@mipmap/ic_hp_yd_10" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/rl"
        android:layout_centerHorizontal="true"
        android:paddingStart="@dimen/dimen_120dp"
        android:visibility="gone">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv"
            android:layout_marginStart="-22dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:layout_toEndOf="@id/iv"
            android:background="@drawable/bj_circle_fff_10"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dimen_2dp"
            android:text="1.2km"
            android:textColor="@color/color_000000"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_hp_yd_11" />
    </RelativeLayout>
</RelativeLayout>