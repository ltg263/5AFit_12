<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar_common" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5dp"
        android:background="@color/line_color" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list_zp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:padding="@dimen/dp_10" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150dp"
        android:layout_margin="@dimen/dimen_20dp"
        android:background="@null"
        android:gravity="top"
        android:hint="说说你的感受和心得吧~"
        android:lineSpacingExtra="@dimen/dp_10"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_999999"
        android:textSize="@dimen/sp_14" />


    <TextView
        android:id="@+id/tv_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/icon_dw1"
        android:drawableEnd="@drawable/icon_jiantou_you_99"
        android:drawablePadding="10dp"
        android:padding="@dimen/dimen_20dp"
        android:text="你在哪里"
        android:textColor="@color/color_333333"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/dimen_15dp"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/tv_gk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_20dp"
        android:background="@drawable/btn_shape_bj_theme_99"
        android:drawableEnd="@drawable/icon_jiantou_xia_66"
        android:drawablePadding="@dimen/dimen_5dp"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dimen_5dp"
        android:text="公开"
        android:textColor="@color/color_333333"
        android:textSize="12sp" />
</LinearLayout>