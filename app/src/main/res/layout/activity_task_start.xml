<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar_common" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5dp"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/rl_sbgl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_15dp">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备管理"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_20dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_1"
            android:layout_alignBottom="@id/tv_1"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toRightOf="@id/tv_1"
            android:background="@drawable/bj_shape_line_66_6"
            android:padding="@dimen/dimen_5dp"
            android:scaleType="center"
            android:src="@drawable/icon_jiantou_you_00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_1"
            android:layout_marginTop="@dimen/dp_10"
            android:text="智能椭圆机——已连接"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_2" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/ic_yundong_bj1">

        <LinearLayout
            android:id="@+id/ll_kcxz"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dimen_30dp"
            android:layout_marginEnd="@dimen/dimen_30dp"
            android:layout_marginBottom="@dimen/dimen_50dp"
            android:background="@drawable/ic_shade_img"
            android:gravity="center">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/icon_task_kcxz"
                android:drawablePadding="@dimen/dp_10"
                android:text="课程选择"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_xlkz"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60dp"
            android:layout_above="@id/ll_kcxz"
            android:layout_marginStart="@dimen/dimen_30dp"
            android:layout_marginEnd="@dimen/dimen_30dp"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:background="@drawable/ic_shade_img"
            android:gravity="center">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/icon_task_xlkz"
                android:drawablePadding="@dimen/dp_10"
                android:text="心率控制"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14" />


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>