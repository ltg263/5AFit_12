<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/dimen_15dp">

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_text_theme"
        android:padding="@dimen/dimen_5dp"
        android:text="Q1"
        android:textColor="@color/color_ffffff"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_num"
        android:layout_alignBottom="@id/tv_num"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@id/tv_num"
        android:drawableEnd="@drawable/icon_jiantou_xia_66"
        android:gravity="center_vertical"
        android:text="压东花来间采议制水声她战完许务"
        android:textColor="@color/color_333333"
        android:textSize="15sp" />

    <WebView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_below="@id/tv_title"
        android:scrollbars="none"
        android:visibility="gone"
        tools:ignore="WebViewLayout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toEndOf="@id/tv_num"
        android:background="@color/line_color" />

</RelativeLayout>