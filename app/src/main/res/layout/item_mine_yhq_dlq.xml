<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dimen_30dp"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_youhuiq_bj" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/iv"
        android:layout_alignTop="@id/iv"
        android:layout_alignEnd="@id/iv"
        android:layout_alignBottom="@id/iv">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/tv_icon"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_5" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:layout_weight="1.3"
            android:orientation="vertical"
            android:paddingStart="@dimen/dimen_15dp">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_icon"
                android:text="运动手环10元优惠券"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_1"
                android:layout_marginTop="@dimen/dimen_7dp"
                android:layout_toEndOf="@id/tv_icon"
                android:text="运动手环10元优惠券"
                android:textColor="@color/color_text_theme"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获得途径：宝箱获得"
                android:textColor="@color/color_999999"
                android:textSize="9sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_3"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_toEndOf="@id/tv_icon"
                android:text="2020.05.01-2020.05.31"
                android:textColor="@color/color_666666"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>