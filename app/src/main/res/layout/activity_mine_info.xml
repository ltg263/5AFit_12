                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dimen_70dp"
                        android:gravity="center_vertical">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_mine_info2"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="center_vertical"
                            android:padding="@dimen/dimen_15dp"
                            android:text="昵称"
                            android:textColor="@color/color_333333"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_info_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:drawableEnd="@drawable/icon_jiantou_you_99"
                            android:drawablePadding="@dimen/dp_10"
                            android:padding="@dimen/dp_10"
                            android:text=""
                            android:textColor="@color/color_999999"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:background="#F2F2F2" />

                    <LinearLayout
                        android:id="@+id/ll_info_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_mine_info3"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="center_vertical"
                            android:padding="@dimen/dimen_15dp"
                            android:text="个人签名"
                            android:textColor="@color/color_333333"
                            android:textSize="16sp" />


                        <TextView
                            android:id="@+id/tv_info_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:drawableEnd="@drawable/icon_jiantou_you_99"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="end"
                            android:padding="@dimen/dp_10"
                            android:text="暂无个性签名"
                            android:textColor="@color/color_999999"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:background="#F2F2F2" />

                    <LinearLayout
                        android:id="@+id/ll_info_jbxx"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_mine_info2"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="center_vertical"
                            android:padding="@dimen/dimen_15dp"
                            android:text="基本信息修改(性别/身高/体重)"
                            android:textColor="@color/color_333333"
                            android:textSize="16sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:drawableEnd="@drawable/icon_jiantou_you_99"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="end"
                            android:padding="@dimen/dp_10"
                            android:text=""
                            android:textColor="@color/color_999999"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:background="#F2F2F2" />

                    <LinearLayout
                        android:id="@+id/ll_info_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_mine_info4"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="center_vertical"
                            android:padding="@dimen/dimen_15dp"
                            android:text="所在地"
                            android:textColor="@color/color_333333"
                            android:textSize="16sp" />


                        <TextView
                            android:id="@+id/tv_info_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:drawableEnd="@drawable/icon_jiantou_you_99"
                            android:drawablePadding="@dimen/dp_10"
                            android:padding="@dimen/dp_10"
                            android:text=""
                            android:textColor="@color/color_999999"
