                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:drawableEnd="@drawable/icon_jiantou_you_99"
                            android:drawablePadding="@dimen/dp_10"
                            android:padding="@dimen/dp_10"
                            android:text=""
                            android:textColor="@color/color_999999"
                            android:textSize="14sp" />
                    </LinearLayout>


                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bj_circle_line_fff">


                    <com.jxkj.fit_5a.conpoment.view.RoundImageView
                        android:id="@+id/iv_img"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_margin="@dimen/dimen_5dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_7"
                        app:type="circle" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@id/iv_img"
                        android:layout_alignBottom="@id/iv_img"
                        android:layout_marginEnd="-5dp"
                        android:layout_marginBottom="-5dp"
                        android:src="@drawable/ic_mine_info1" />

                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:padding="@dimen/dimen_15dp">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账户绑定"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dimen_2dp"
                    android:layout_below="@id/tv1"
                    android:layout_marginTop="-5dp"
                    android:background="@drawable/line_shape_bj_select" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@drawable/icon_jiantou_you_99"
                    android:paddingStart="@dimen/dimen_5dp"
                    android:text="更多"
                    android:textColor="@color/color_999999"
                    android:textSize="14sp"
                    android:visibility="invisible" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:background="@drawable/bj_circle_fff_10"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_info_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_mine_info6"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimen_15dp"
                        android:text="手机号绑定"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/tv_info_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:drawableEnd="@drawable/icon_jiantou_you_99"
                        android:drawablePadding="@dimen/dp_10"
                        android:padding="@dimen/dp_10"
