                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:drawableEnd="@drawable/icon_jiantou_you_99"
                        android:drawablePadding="@dimen/dp_10"
                        android:padding="@dimen/dp_10"
                        android:text=""
                        android:textColor="@color/color_999999"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:background="#F2F2F2" />

                <LinearLayout
                    android:id="@+id/ll_info_7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_mine_info8"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimen_15dp"
                        android:text="QQ绑定"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/tv_info_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:drawableEnd="@drawable/icon_jiantou_you_99"
                        android:drawablePadding="@dimen/dp_10"
                        android:padding="@dimen/dp_10"
                        android:text=""
                        android:textColor="@color/color_999999"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:background="#F2F2F2" />


                <LinearLayout
                    android:id="@+id/ll_info_8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_mine_info9"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimen_15dp"
                        android:text="微博绑定"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/tv_info_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:drawableEnd="@drawable/icon_jiantou_you_99"
                        android:drawablePadding="@dimen/dp_10"
                        android:padding="@dimen/dp_10"
                        android:text=""
                        android:textColor="@color/color_999999"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
