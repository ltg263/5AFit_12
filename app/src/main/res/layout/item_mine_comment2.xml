<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.jxkj.fit_5a.conpoment.view.RoundImageView
        android:id="@+id/iv_head_11"
        android:layout_width="@dimen/dimen_25dp"
        android:layout_height="@dimen/dimen_25dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:src="@mipmap/ic_6"
        app:type="circle" />

    <TextView
        android:id="@+id/tv_name_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_toEndOf="@id/iv_head_11"
        android:text="吴帅帅"
        android:textColor="#AAAAAA"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_pl_content_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name_11"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_toEndOf="@id/iv_head_11"
        android:text="工作内容工作内容工作内容工作内容"
        android:textColor="@color/color_333333"
        android:textSize="14sp" />
</RelativeLayout>