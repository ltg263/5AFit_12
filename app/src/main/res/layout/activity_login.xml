<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_icon"
                android:layout_alignBottom="@id/iv_icon"
                android:layout_marginStart="@dimen/common_margin_26"
                android:gravity="center_vertical"
                android:lineSpacingExtra="@dimen/dimen_20dp"
                android:text="您好！\n欢迎来到"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_25dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dimen_50dp"
                android:layout_marginEnd="@dimen/common_margin_26"
                android:src="@mipmap/icon_app_logo" />


            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_icon"
                android:layout_marginHorizontal="@dimen/common_margin_26"
                android:layout_marginTop="@dimen/dimen_80dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_login_sjh" />

                <EditText
                    android:id="@+id/et_input_sjh"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:padding="@dimen/dp_10"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/et_input_sjh_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=" ✔"
                    android:textColor="@color/color_text_theme"
                    android:textSize="@dimen/dimen_25dp"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_below="@id/ll"
                android:layout_marginHorizontal="@dimen/common_margin_26"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/line_color" />

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:layout_marginHorizontal="@dimen/common_margin_26"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_login_mm" />

                <EditText
                    android:id="@+id/et_input_mm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:padding="@dimen/dp_10"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/et_input_mm_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=" ✔"
                    android:textColor="@color/color_text_theme"
                    android:textSize="@dimen/dimen_25dp"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/ll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:layout_marginHorizontal="@dimen/common_margin_26"
                android:layout_marginTop="@dimen/dimen_20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_login_yzm" />

                <EditText
                    android:id="@+id/et_input_yzm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:padding="@dimen/dp_10"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="|"
                    android:textColor="@color/color_text_theme"
                    android:textSize="@dimen/dimen_25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_go_yzm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="获取验证码"
                    android:textColor="@color/color_text_theme"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_below="@id/ll2"
                android:layout_marginHorizontal="@dimen/common_margin_26"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/line_color" />

            <TextView
                android:id="@+id/tv_login_yzm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view2"
                android:layout_margin="@dimen/dimen_16dp"
                android:padding="@dimen/dp_10"
                android:text="验证码登录"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_login_wjmm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view2"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/dimen_16dp"
                android:padding="@dimen/dp_10"
                android:text="忘记密码?"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_14" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_login_yzm">

                <TextView
                    android:id="@+id/tv_go_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_30dp"
                    android:layout_marginTop="@dimen/dimen_30dp"
                    android:background="@drawable/btn_shape_bj_theme_25"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="登 录"
                    android:textColor="@color/color_ffffff"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/ll_go_zc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_go_login"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="没有账号 "
                        android:textColor="@color/color_999999"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 去注册"
                        android:textColor="@color/color_text_theme"
                        android:textSize="12sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_go_zc"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/icon_splash_2" />


                <LinearLayout
                    android:id="@+id/ll_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_line"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_login_wx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        android:src="@drawable/icon_login_wx" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        android:src="@drawable/icon_login_qq" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        android:src="@drawable/icon_login_xl" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        android:src="@drawable/icon_login_sf" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_share"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/dimen_20dp"
                    android:gravity="center"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="注册或登录即同意 "
                        android:textColor="@color/color_999999"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 《使用协议》"
                        android:textColor="@color/color_text_theme"
                        android:textSize="12sp" />

                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
