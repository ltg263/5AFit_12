<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rv_select_yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5dp"
        android:background="@mipmap/ic_jincoucz">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_25dp"
            android:drawableStart="@drawable/ic_dou"
            android:drawablePadding="@dimen/dimen_5dp"
            android:text="1000"
            android:textColor="@color/color_text_theme"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv1"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:text="￥100"
            android:textColor="@color/color_text_theme"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rv_select_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/rv_select_yes"
        android:layout_alignBottom="@id/rv_select_yes"
        android:background="@drawable/bnt_jb_shape_vip_item_1"
        android:visibility="invisible">


        <TextView
            android:id="@+id/tv12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_25dp"
            android:drawableStart="@drawable/ic_dou_h"
            android:drawablePadding="@dimen/dimen_5dp"
            android:text="1000"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv12"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:text="￥100"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />

    </RelativeLayout>
</RelativeLayout>