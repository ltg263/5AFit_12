<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_15dp"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@color/color_ffffff"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_shop_pic"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/bj_circle_f2_5"
        android:scaleType="center"
        android:src="@mipmap/ic_5" />


    <TextView
        android:id="@+id/tv_shop_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="@dimen/dp_10"
        android:singleLine="true"
        android:text="XXXX运动手环积分专..."
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_3dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_home_jq" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:text="4890"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:text="￥368"
            android:textColor="#cccccc"
            android:textSize="11dp" />


    </LinearLayout>

</LinearLayout>
